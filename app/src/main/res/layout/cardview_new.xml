<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardImageHeight"
            android:background="@android:color/holo_blue_dark" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="68dp"
            android:layout_alignBottom="@+id/cardSubTitle"
            android:layout_alignParentEnd="true"
            android:paddingRight="16dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:adjustViewBounds="true"
            android:scaleType="center" />

        <TextView
            android:id="@+id/cardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardImage"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:lines="1"
            android:paddingLeft="@dimen/padding_left_right"
            android:paddingRight="@dimen/padding_left_right"
            android:paddingTop="@dimen/padding_top_full"
            android:text="hello"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cardSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardTitle"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:lines="1"
            android:paddingBottom="16dp"
            android:paddingLeft="@dimen/padding_left_right"
            android:paddingRight="@dimen/padding_left_right"
            android:text="helloSubText"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
